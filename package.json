{
  "name": "severskcable-status-back",
  "version": "1.0.0",
  "description": "Backend to severskcable-status",
  "main": "main.ts",
  "type": "module",
  "engines": {
    "node": "^20.0.0",
    "npm": ">=10"
  },
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "start:dev": "nodemon",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "tsc --noEmit && node --no-warnings=ExperimentalWarning --loader ts-node/esm",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123 --host localhost"
  },
  "author": "KotIA",
  "license": "ISC",
  "devDependencies": {
    "@types/convict": "^6.1.6",
    "@types/convict-format-with-validator": "^6.0.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "eslint": "9.9.1",
    "json-server": "1.0.0-beta.2",
    "nodemon": "3.1.4",
    "pino-pretty": "11.2.2",
    "rimraf": "6.0.1",
    "ts-node": "10.9.2",
    "tslib": "2.7.0",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "@typegoose/typegoose": "^12.6.0",
    "class-transformer": "^0.5.1",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "http-status-codes": "^2.3.0",
    "inversify": "^6.0.2",
    "jose": "^5.8.0",
    "mongoose": "8.5.4",
    "pino": "^9.3.2",
    "reflect-metadata": "^0.2.2"
  }
}
