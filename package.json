{
  "name": "severskcable-status-back",
  "version": "1.0.0",
  "description": "Backend to severskcable-status",
  "main": "main.ts",
  "type": "module",
  "engines": {
    "node": "^20.0.0",
    "npm": ">=10"
  },
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "start:dev": "nodemon",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "tsc --noEmit && node --no-warnings=ExperimentalWarning --loader ts-node/esm",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123 --host localhost"
  },
  "author": "KotIA",
  "license": "ISC",
  "devDependencies": {
    "eslint": "9.9.1",
    "json-server": "1.0.0-beta.2",
    "nodemon": "3.1.4",
    "pino-pretty": "11.2.2",
    "rimraf": "6.0.1",
    "ts-node": "10.9.2",
    "tslib": "2.7.0",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "pino": "^9.3.2"
  }
}
